[github]
  user = mvrilo

[color]
  ui = true

[core]
  quotepath = false

[help]
  autocorrect = 1

[alias]
  ci = commit --verbose
  co = checkout
  stat = status
  st = status
  ls = ls-files
  ll = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  lg = !git ll --graph
  punch = !git pull && git push
  contributors = shortlog --summary --numbered
