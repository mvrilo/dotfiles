#!/bin/bash

if [ "`uname`" == "Darwin" ]; then
  alias ls="ls -G"
else
  alias ls="ls --color"
fi

alias ll="ls -alFh"
alias l='ll'
alias snv='svn'

alias quit='exit'
alias :e=$EDITOR
alias vimrc='vim ~/.vimrc'

alias myip='curl -s http://ip.appspot.com'
alias chrome='open -a /Applications/Google\ Chrome.app'
alias reload='. ~/.bash_profile'
